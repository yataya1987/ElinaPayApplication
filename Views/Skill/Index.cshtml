@model IEnumerable<BnetApplication.Models.Skill>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Index";
}
<div class="container">
    <ol class="breadcrumb">
        <li ><a href="~/dea/index">Dashboard</a></li>
        <li  class="active"><a href="#">Skill list</a></li>
    </ol>
</div>
<h2>Skills</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-responsive" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SkillName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SkillName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SkillID },new { @class="btn btn-info"})
    </tr>
}

</table>
