                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{


    <script>
        $(document).ready(function () {

        });
    

        $('#demoGrid tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" placeholder="بحث في( ' + title + ')"  />');
        });
        var table = $("#demoGrid").DataTable({
            
            "dom": 'Bfrtip',
            "buttons": [
                'copy', 'csv', 'excel'
            ],
            "pageLength": 8,
            "ajax": {
                "url": "@Url.Action("Report1", "Ticket")",
                "data": function (d) {
                    var from = $("#from").val();
                    var to = $("#to").val();
                    d.from = from;
                    d.to = to;
                },
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "Id" },
                { "data": "CallType" },
                { "data": "Ani" },
                { "data": "SubscriberName" },
                { "data": "ServiceNumber" },
                { "data": "AlternativeNumber" },
                { "data": "CallAddress" },
                { "data": "ProblemType" },
                { "data": "questiontext"},
                { "data": "TicketDetails" },
                { "data": "Router" },
                { "data": "Idate", "render": function (d) { return moment(d).format("DD/MM/YYYY HH:mm:ss"); }},
                { "data": "Iuser" },
                { "data": "Udate", "render": function (d) { return moment(d).format("DD/MM/YYYY HH:mm:ss"); }},
                { "data": "Uuser" },
                { "data": "AgentUdate", "render": function (d) { return moment(d).format("DD/MM/YYYY HH:mm:ss"); }},
                { "data": "AgentUpdate" },
                { "data": "AgentUNote" },
                { "data": "StatusInternal" },
                { "data": "TicketInternalAction" },
                { "data": "StatusExternal" },
                { "data": "TicketExternalAction" },
                { "data": "UdateExternal", "render": function (d) { return moment(d).format("DD/MM/YYYY HH:mm:ss"); } },
                { "data": "UuserExternal" },
                { "data": "FollowUp" }
            ],
            "scrollX": true,
            "processing": true
        });

        // Apply the search
        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });
        });
        $("#search").click(function () {
            table.ajax.reload();
        });

        $(document).ready(function () {
            $(function () {
                $('#datetimepicker1').datetimepicker();
                $('#datetimepicker2').datetimepicker({
                    useCurrent: false //Important! See issue #1075
                });
                $("#datetimepicker1").on("dp.change", function (e) {
                    $('#datetimepicker2').data("DateTimePicker").minDate(e.date);
                });
                $("#datetimepicker2").on("dp.change", function (e) {
                    $('#datetimepicker6').data("DateTimePicker").maxDate(e.date);
                });
            });
        });
    </script>}