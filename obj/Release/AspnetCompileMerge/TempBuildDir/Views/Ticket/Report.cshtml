                            <th>الموظف المعدل</th>
                            <th>ملاحظات التعديل</th>
                            <th>حالة المشرف 1</th>
                            <th>اجراء المشرف 1</th>
                            <th>حالة المشرف 2</th>
                            <th>اجراء المشرف 2</th>
                            <th>تاريخ تعديل المشرف 2</th>
                            <th>المشرف 2</th>
                            <th>جهة المتابعة</th>
                        </tr>
                    </thead>

                    <tfoot>
                        <tr>
                            <th>رقم المكالمة</th>
                            <th>نوع المكالمة</th>
                            <th>رقم المتصل</th>
                            <th>اسم المشترك</th>
                            <th>رقم الخدمة</th>
                            <th>رقم التواصل</th>
                            <th>العنوان الرئيسي</th>
                            <th>عنوان المشكلة</th>
                            <th>نوع الاستفسار</th>
                            <th>تفاصيل</th>
                            <th>نوع الراوتر</th>
                            <th>تاريخ الادخال</th>
                            <th>اسم المدخل</th>
